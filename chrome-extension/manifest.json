{
  "name": "Recipe Simplifier",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extracts recipes from web pages",
  "background": {
    "scripts": ["dist/js/background.js", "lib/hot-reload.js"]
  },
  "permissions": ["tabs", "http://*/*", "https://*/*", "storage"],
  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/js/content-script.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "recipe simplifier"
  }
}
